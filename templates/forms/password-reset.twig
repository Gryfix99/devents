<div class="auth-container">
    <div class="auth-card">
        <div id="form-message" style="display: none;" class="auth-message"></div>

        {# ETAP 1: Podaj e-mail #}
        <div id="reset-step-1">
            <div class="auth-header"><h2 class="auth-title">Zresetuj hasło</h2></div>
            <p class="auth-info-text">Podaj swój e-mail, aby otrzymać 6-cyfrowy kod.</p>
            <form id="send-code-form" class="devents-form">
                <div class="form-group">
                    <label for="user_email" class="form-label">Adres e-mail</label>
                    <input type="email" id="user_email" name="user_email" class="form-control" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn--primary btn--full-width">Wyślij kod</button>
                </div>
            </form>
        </div>

        {# ETAP 2: Wpisz kod weryfikacyjny (6 pól) #}
        <div id="reset-step-2" style="display: none;">
            <div class="auth-header"><h2 class="auth-title">Wpisz kod weryfikacyjny</h2></div>
            <p class="auth-info-text">Kod został wysłany na adres <strong id="user-email-display"></strong>.</p>
            <form id="validate-code-form" class="devents-form" autocomplete="off" novalidate>
                <div class="form-row code-inputs" style="display: flex; gap: 0.5rem; justify-content: center;">
                    {% for i in 1..6 %}
                        <input type="text"
                               inputmode="numeric"
                               pattern="[0-9]*"
                               maxlength="1"
                               class="form-control code-digit"
                               id="reset_code_{{ i }}"
                               name="reset_code_{{ i }}"
                               required
                               autocomplete="off"
                               style="width: 2.5rem; text-align: center; font-size: 1.5rem;">
                    {% endfor %}
                </div>
                <div class="form-group" style="margin-top: 1rem;">
                    <button type="submit" class="btn btn--primary btn--full-width">Zweryfikuj kod</button>
                </div>
            </form>
        </div>

        {# ETAP 3: Ustaw nowe hasło #}
        <div id="reset-step-3" style="display: none;">
            <div class="auth-header"><h2 class="auth-title">Ustaw nowe hasło</h2></div>
            <form id="set-password-form" class="devents-form" autocomplete="off">
                <input type="text" name="username" id="username-field" autocomplete="username" value="" style="position: absolute; left: -9999px;" aria-hidden="true" tabindex="-1">
                <input type="hidden" name="set_pass_reset_code" id="set_pass_reset_code">
                <div class="form-group">
                    <label for="pass1" class="form-label">Nowe hasło</label>
                    <input type="password" name="pass1" id="pass1" class="form-control" autocomplete="new-password" required>
                    <meter max="4" id="password-strength-meter" style="width: 100%; height: 8px; margin-top: 5px;"></meter>
                    <ul class="password-requirements" style="list-style: none; padding-left: 0; font-size: 0.8rem; margin-top: 5px;">
                        <li id="length" class="req-item">✖ Min. 8 znaków</li>
                        <li id="uppercase" class="req-item">✖ Wielka litera</li>
                        <li id="lowercase" class="req-item">✖ Mała litera</li>
                        <li id="digit" class="req-item">✖ Cyfra</li>
                    </ul>
                </div>
                <div class="form-group">
                    <label for="pass2" class="form-label">Potwierdź nowe hasło</label>
                    <input type="password" name="pass2" id="pass2" class="form-control" autocomplete="new-password" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn--primary btn--full-width">Zapisz nowe hasło</button>
                </div>
            </form>
        </div>

    </div>
</div>
